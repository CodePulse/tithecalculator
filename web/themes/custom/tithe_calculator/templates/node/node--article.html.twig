{% set more_information = node.field_more_information.target_id %}
{% set full_width = (more_information > 0) ? 'col-8' : 'col-12' %}

<div class="pse-news-article">
  {% if node.field_image.target_id %}
    <div class="bg-light py-4 mb-2 article-hero" style="background-image: url('{{ image_path }}');">
      <div class="container">
        <div class="py-5">
          <div class="row justify-content-center text-center py-3">
            <div class="col-12 col-md-8">
              <h1 class="display-4 background-title">{{ label }}</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="container">
      <h1>{{ label }}</h1>
    </div>
  {% endif %}
  <div class="container">
    <div class="row">
      <div class="{{ full_width }}">
        <h3><p class="mb-3 summary">{{ node.body.summary }}</p></h3>
        <p class="article-date">{{ 'Published on: ' ~ node.createdtime|date("j F Y") }}</p>
        {{ content.body }}
        {{ content.field_content_sections }}
        <hr>
      </div>
      {% if more_information > 0 %}
        <div class="col-4 mb-3 pse-more-information">
        <h2>{{ 'More information' | t }}</h2>
          {{ content.field_more_information }}
      </div>
      {% endif %}
    </div>
    <div class="row">
      <div class="col-12">
        {% if node.field_related_news.target_id %}
          <h2 class="text-center">{{ 'Related news'|t }}</h2>
          {{ content.field_related_news }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
