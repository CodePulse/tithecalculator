{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <div class="container">
    <ol class="breadcrumb">
      {% for item in breadcrumb %}
        <li class="breadcrumb-item">
          {% if item.url %}
            <a class="text-dark" href="{{ item.url }}"><span>{{ item.text }}</span></a>
          {% else %}
            {{ item.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </div>
{% endif %}
