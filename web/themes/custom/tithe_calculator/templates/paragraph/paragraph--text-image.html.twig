{% set background_class = (background_color == 'grey') ? 'pse-light-gray-bg text-white' : 'text-pse-grey' %}
<div class="{{ background_class }}">
  <div class="container">
    <div class="row justify-content-between align-items-center py-5">
      {% if image_alignment == 'right' %}
      <div class="col-12 col-md-6 order-2 order-md-1">
        <h1 class="display-4">{{ content.field_title }}</h1>
        <p class="large mb-4">{{ content.field_text }}</p>
        <div class="row align-items-center">
          <div class="col-12 col-md-5 mb-2 mb-md-0">
            {{ content.field_cta_link }}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-5 order-1 order-md-2 pl-md-0 mb-4 mb-md-0"><img class="w-100" src="{{ image_path }}"/>
      </div>
      {% else %}
        <div class="col-12 col-md-5 order-1 order-md-1 pl-md-0 mb-4 mb-md-0"><img class="w-100" src="{{ image_path }}"/>
        </div>
        <div class="col-12 col-md-6 order-2 order-md-2">
          <h1 class="display-4">{{ content.field_title }}</h1>
          <p class="large mb-4">{{ content.field_text }}</p>
          <div class="row align-items-center">
            <div class="col-12 col-md-5 mb-2 mb-md-0">
              {{ content.field_cta_link }}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
