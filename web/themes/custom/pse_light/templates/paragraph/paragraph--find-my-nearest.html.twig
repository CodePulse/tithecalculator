<div id="cwc-find-my-nearest-paragraph" class="cwc-find-my-nearest-paragraph">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2>{{ content.field_title }}</h2>
        <i class="fa fa-map-o fa-3x" aria-hidden="true"></i>
      </div>
    </div>
    <div class="row padding-top">
      {% if content.field_image %}
        <div class="col-lg-2 fmn-icon">
          {{ content.field_image }}
        </div>
      {% endif %}

      {% set body_classes = 'col-md-6' %}
      <div class="{{ body_classes }}">
        {% set body_content_classes = content.field_image ? 'fmn-content text-center' : 'fmn-content' %}
        <div class="{{ body_content_classes }}">{{ content.field_body }}</div>
      </div>

      {% set search_classes = content.field_image ? 'col-md-6 col-lg-4' : 'col-md-6' %}
      <div class="{{ search_classes }}">
        <div class="fmn-search-form">{{ content.search }}</div>
      </div>
    </div>
  </div>
</div>
