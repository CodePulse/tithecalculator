<div class="pse-news-article">
  <div class="container">
    <h1>{{ label }}</h1>
    <h3><p class="mb-3">{{ node.body.summary }}</p></h3>
    <p class="article-date">{{ 'Published on: ' ~ node.createdtime|date("j F Y") }}</p>
    {{ content.body }}
    {{ content.field_content_sections }}
    <hr>
    {% if node.field_related_news.target_id %}
      <h2 class="text-center">{{ 'Related news'|t }}</h2>
      {{ content.field_related_news }}
    {% endif %}
  </div>
</div>
