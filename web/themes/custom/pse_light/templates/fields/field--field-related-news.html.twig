<div class="row text-center flex-md-nowrap py-md-5">
  {% for item in items %}
    <div class="col-12 col-md-6">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          {{ item.content }}
        </div>
      </div>
    </div>
    {% if loop.first %}
      <div class="border-right d-md-block"></div>
    {% endif %}
  {% endfor %}
</div>
